<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Base Colors  -->
    <Color x:Key="PrimaryColor">#2D3748</Color>
    <!--  Dark slate  -->
    <Color x:Key="SecondaryColor">#4A5568</Color>
    <!--  Medium slate  -->
    <Color x:Key="AccentColor">#3B82F6</Color>
    <!--  Bright blue  -->
    <Color x:Key="BorderColor">#757575</Color>
    <!--  Bright blue  -->
    <Color x:Key="BackgroundColor">#F7FAFC</Color>
    <!--  Very light gray  -->
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
    <!--  White  -->
    <Color x:Key="TextPrimaryColor">#1A202C</Color>
    <!--  Near black  -->
    <Color x:Key="TextSecondaryColor">#718096</Color>
    <!--  Cool gray  -->
    <Color x:Key="ConstructiveButtonColor">#10B981</Color>
    <!--  Emerald green  -->
    <Color x:Key="DestructiveButtonColor">#EF4444</Color>
    <!--  Bright red  -->



    <!--  Brushes  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}" />
    <SolidColorBrush x:Key="ConstructiveButtonBrush" Color="{StaticResource ConstructiveButtonColor}" />
    <SolidColorBrush x:Key="DestructiveButtonBrush" Color="{StaticResource DestructiveButtonColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>

</ResourceDictionary>